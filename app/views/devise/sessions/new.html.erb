<% provide(:title, "Log in") %>
<h1>Log in</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">  
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <%= f.label :email,"メールアドレス" %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password,"パスワード" %>
      <%= link_to  "(パスワードをお忘れの方はこちら)", new_user_password_path %>
      <%= f.password_field :password, class: 'form_control' %>
    
      <% if devise_mapping.rememberable? %>
        <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Remember me on this computer</span>
      <% end %>
      <% end %>
      
      <%= f.submit "Log in", class: "btn btn-primary" %>
    <% end %>

    <p>ユーザー登録はお済みですか? <%= link_to "新規登録", new_user_path %></p>
    <%= link_to "Facebookでログイン", user_facebook_omniauth_authorize_path, class: "btn btn-lg btn-primary" %>
  </div>
</div>

