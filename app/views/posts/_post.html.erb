<li class="col-md-4" id="post-<%= post.id %>">
  <%= image_tag post.user.avatar.url %>
  <span class="user"><%= link_to post.user.username, post.user %></span>
  <span class="content">
    <%= post.title %>
    <%= link_to post.picture.url, class: "popup-btn" do %>
      <%= image_tag post.picture.url %>
    <% end %>

    <script>
      $(function(){
        $('.popup-btn').magnificPopup({
        type: 'image'
      });
    });
    </script>
    
    <%= link_to  "コメントする", post_path(post) %>
    <%= render 'favorites/like_button', post: post %>
  </span>
  <span class="timestamp">
    Posted <%= time_ago_in_words(post.created_at) %> ago.
    <% if current_user?(post.user) %>
      <%= link_to "delete", post, method: :delete,
                          data: { confirm: "削除しますか?" } %>
    <% end %>
  </span>
</li>